{
  "name": "vite-plugin-fastly-workspace-root",
  "private": "true",
  "scripts": {
    "dev": "pnpm -r --parallel --filter \"./packages/*\" run dev",
    "build": "pnpm -r --filter \"./packages/*\" run build",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "format": "prettier --ignore-path .gitignore --ignore-unknown . '!pnpm-lock.yaml' !'**/static-publisher/**' --write",
    "ci": "pnpm -r --stream run ci",
    "test": "pnpm run /^test:/",
    "test:packages": "pnpm -r --stream run test",
    "test:format": "prettier --check --ignore-path .gitignore --ignore-unknown . '!pnpm-lock.yaml' !'**/static-publisher/**'"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "kill-em-all": "link:../kill-em-all/packages/kill-em-all"
  }
}
